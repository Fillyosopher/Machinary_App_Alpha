<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/text_background_selector"
    android:gravity="top"
    android:focusable="false" >
 
    <!-- TextView columnTitleTextView -->
    <!-- ListView innerMachineListView -->
    <!-- Button addRowButton -->
    <!-- Button removeRowButton -->
    
    <TextView
        android:id="@+id/columnTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:focusable="true"
        android:hint="List Name Empty" />
    
	<ListView
        android:id="@+id/innerMachineListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="right"
        android:layout_below="@id/columnTitleTextView"
        android:layout_above="@+id/addRowButton" 
        android:focusable="false" >
	</ListView>
	
    <Button
	    android:id="@id/addRowButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:text="Add"
        android:layout_alignParentBottom="true" 
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />
    
    <Button
	    android:id="@+id/removeRowButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/addRowButton"
	    android:text="Remove"
        android:layout_alignParentBottom="true" 
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:minHeight="20dp" 
        android:focusable="false" />

</RelativeLayout>