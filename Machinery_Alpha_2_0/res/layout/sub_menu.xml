<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/text_background_selector"
    android:gravity="top"  >
    
<!--     Sort By Name -->
    <Button
	    android:id="@+id/buttonSBN"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/sortByName"
	    android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />

<!--     Sort By Year  -->
    <Button
	    android:id="@+id/buttonSBY"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/sortByYear"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />
        
<!--     Sort By Lest Grease -->
    <Button
	    android:id="@+id/buttonSBLG"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/sortByLastGrease"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />

<!--     Sort By Last Maintainence -->
    <Button
	    android:id="@+id/buttonSBLM"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/sortByLastMaintenance"
        android:layout_marginBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0" />

<!--     Delete List -->    
    <Button
	    android:id="@+id/buttonDL"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/deleteList"
        android:textAppearance="?android:attr/textAppearanceSmall" 
        android:minHeight="20dp" 
        android:focusable="false" />
</LinearLayout>
